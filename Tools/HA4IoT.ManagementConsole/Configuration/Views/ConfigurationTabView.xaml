                                <Setter Property="Margin" Value="0, 0, 10, 0" />
                            </Style>
                            <Style TargetType="{x:Type CheckBox}">
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                            </Style>
                            <Style TargetType="{x:Type TextBox}">
                                <Setter Property="Margin" Value="0,2" />
