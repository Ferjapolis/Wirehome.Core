<?xml version="1.0" encoding="utf-8" ?>
<Configuration Version="1" xmlns:CCTools="CCTools">

  <Devices>
    <!-- Shared input devices -->
    <CCTools:HSPE16_InputOnly id="Input0" i2cAddress="42" />
    <CCTools:HSPE16_InputOnly id="Input1" i2cAddress="43" />
    <CCTools:HSPE16_InputOnly id="Input2" i2cAddress="47" />
    <CCTools:HSPE16_InputOnly id="Input3" i2cAddress="45" />
    <CCTools:HSPE16_InputOnly id="Input4" i2cAddress="46" />
    <CCTools:HSPE16_InputOnly id="Input5" i2cAddress="44" />
    
    <CCTools:HSRel5 id="LivingRoom.HSRel5" i2cAddress="38" />
    <CCTools:HSRel8 id="LivingRoom.HSRel8" i2cAddress="21" />

    <I2CHardwareBridge i2cAddress="50"></I2CHardwareBridge>
  </Devices>

  <WeatherStation>
    <OWMWeatherStation appID="" lat="" lot="" />
  </WeatherStation>
  
  <Rooms>
    <Room id="Bedroom">
      <TemperatureSensor id="Bedroom.TemperatureSensor"></TemperatureSensor>
      <HumiditySensor id="Bedroom.WithHumiditySensor"></HumiditySensor>
      
      <MotionDetector id="Bedroom.MotionDetector">
        <CCTools:BinaryInput deviceId="Input5" port="GPIO12" />
      </MotionDetector>
      
      <Lamp id="Bedroom.LightCeiling">
        <CCTools:BinaryOutput deviceId="LivingRoom.HSRel5" port="GPIO0" invertState="true" />
      </Lamp>

      <Lamp id="Bedroom.LightCeilingWindow">
        <CCTools:BinaryOutput deviceId="LivingRoom.HSRel5" port="GPIO1" invertState="true" />
      </Lamp>

      <Lamp id="Bedroom.LightCeilingWall">
        <CCTools:BinaryOutput deviceId="LivingRoom.HSRel5" port="GPIO2" invertState="true" />
      </Lamp>

      <Socket id="Bedroom.SocketWindowLeft">
        <CCTools:BinaryOutput deviceId="LivingRoom.HSRel5" port="Relay0" />
      </Socket>

      <Socket id="Bedroom.SocketWindowRight">
        <CCTools:BinaryOutput deviceId="LivingRoom.HSRel5" port="Relay1" />
      </Socket>

      <Socket id="Bedroom.SocketWall">
        <CCTools:BinaryOutput deviceId="LivingRoom.HSRel5" port="Relay2" />
      </Socket>

      <Socket id="Bedroom.SocketWallEdge">
        <CCTools:BinaryOutput deviceId="LivingRoom.HSRel5" port="Relay3" />
      </Socket>

      <Socket id="Bedroom.SocketBedLeft">
        <CCTools:BinaryOutput deviceId="LivingRoom.HSRel8" port="Relay7" />
      </Socket>

      <Socket id="Bedroom.SocketBedRight">
        <CCTools:BinaryOutput deviceId="LivingRoom.HSRel8" port="GPIO1" />
      </Socket>

      <Socket id="Bedroom.LampBedLeft">
        <CCTools:BinaryOutput deviceId="LivingRoom.HSRel5" port="Relay4" />
      </Socket>

      <Socket id="Bedroom.LampBedRight">
        <CCTools:BinaryOutput deviceId="LivingRoom.HSRel8" port="GPIO0" invertState="true" />
      </Socket>

      <Button id="Bedroom.ButtonDoor">
        <CCTools:BinaryInput deviceId="Input5" port="GPIO11" />
      </Button>

      <Button id="Bedroom.ButtonWindowUpper">
        <CCTools:BinaryInput deviceId="Input5" port="GPIO10" />
      </Button>

      <Button id="Bedroom.ButtonWindowLower">
        <CCTools:BinaryInput deviceId="Input5" port="GPIO13" />
      </Button>

      <Button id="Bedroom.ButtonBedLeftInner">
        <CCTools:BinaryInput deviceId="Input4" port="GPIO2" />
      </Button>

      <Button id="Bedroom.ButtonBedLeftOuter">
        <CCTools:BinaryInput deviceId="Input4" port="GPIO0" />
      </Button>

      <Button id="Bedroom.ButtonBedRightInner">
        <CCTools:BinaryInput deviceId="Input4" port="GPIO1" />
      </Button>

      <Button id="Bedroom.ButtonBedRightOuter">
        <CCTools:BinaryInput deviceId="Input4" port="GPIO3" />
      </Button>

      <RollerShutter id="Bedroom.RollerShutterLeft" autoOffTimeout="00:00:20" maxPosition="1700">
        <PowerPort>
          <CCTools:BinaryOutput deviceId="LivingRoom.HSRel8" port="Relay6" />
        </PowerPort>
        <DirectionPort>
          <CCTools:BinaryOutput deviceId="LivingRoom.HSRel8" port="Relay5" />
        </DirectionPort>
      </RollerShutter>

      <RollerShutter id="Bedroom.RollerShutterRight" autoOffTimeout="00:00:20" maxPosition="1700">
        <PowerPort>
          <CCTools:BinaryOutput deviceId="LivingRoom.HSRel8" port="Relay3" />
        </PowerPort>
        <DirectionPort>
          <CCTools:BinaryOutput deviceId="LivingRoom.HSRel8" port="Relay4" />
        </DirectionPort>
      </RollerShutter>

      <RollerShutterButtons>
        <UpPort>
          <CCTools:BinaryInput deviceId="Input5" port="GPIO6" />
        </UpPort>
        <DownPort>
          <CCTools:BinaryInput deviceId="Input5" port="GPIO7" />
        </DownPort>
      </RollerShutterButtons>

      <RollerShutterButtons>
        <UpPort>
          <CCTools:BinaryInput deviceId="Input5" port="GPIO4" />
        </UpPort>
        <DownPort>
          <CCTools:BinaryInput deviceId="Input5" port="GPIO5" />
        </DownPort>
      </RollerShutterButtons>

      <Window id="Bedroom.WindowLeft">
        <CenterCasement>
          <FullOpenPort>
            <CCTools:BinaryInput deviceId="Input5" port="GPIO2" />
          </FullOpenPort>
          
          <TiltPort>
            
          </TiltPort>
        </CenterCasement>
      </Window>

      <Window id="Bedroom.WindowRight">
        <CenterCasement>
          <FullOpenPort>
            <CCTools:BinaryInput deviceId="Input5" port="GPIO3" />
          </FullOpenPort>

          <TiltPort>

          </TiltPort>
        </CenterCasement>
      </Window>

    </Room>
  </Rooms>

  <App pollInterval="250" showSensorsOverview="true" showMotionDetectorsOverview="true">
    <UILocalizations>
      <UILocalization key="UI.X">Value</UILocalization>
    </UILocalizations>
  </App>
  
</Configuration>

